# Server Configuration
# Set to 'development' for local development, 'production' for production environment
NODE_ENV=development
PORT=3001
BANK_NAME=OA-Pank

# Production Settings
PRODUCTION_DOMAIN=https://example.com
PRODUCTION_IP=http://127.0.0.1
REQUIRE_CENTRAL_BANK=false

# Database Configuration
DB_PATH=./data/database.sqlite

# Security
JWT_SECRET=your-jwt-secret
SESSION_SECRET=your-session-secret

# Central Bank Integration
CENTRAL_BANK_URL=https://henno.cfd/central-bank
CENTRAL_BANK_CLIENT_ID=your-client-id
CENTRAL_BANK_CLIENT_SECRET=your-client-secret
# Fallback value, actual prefix is fetched from central bank
BANK_PREFIX=313
BANK_OWNERS=Your Name

# Base URLs for different environments
DEV_BASE_URL=http://localhost:3001
PROD_BASE_URL=https://example.com
